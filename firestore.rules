
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to access their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Email System: 
    // Create: Auth users can trigger emails, BUT must include their uid so they can read it back.
    // Read: Users can read their own email logs to check delivery status.
    // We allow reading if resource is null to handle the race condition where the client listens before the server commits the write.
    match /mail/{mailId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read: if request.auth != null && (resource == null || resource.data.uid == request.auth.uid);
    }

    // Newsletter: Public write access for signups
    match /subscriptions/{subId} {
      allow create: if true;
      allow read: if false;
    }

    // Lifetrees: Read public, Write auth
    match /lifetrees/{treeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Visions: Read public, Write auth
    match /visions/{visionId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Pulses: Read public, Write auth
    match /pulses/{pulseId} {
      allow read: if true;
      allow write: if request.auth != null;

      // Subcollection for Loves
      match /loves/{userId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Matches: Read public, Write auth
    match /matches/{matchId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
