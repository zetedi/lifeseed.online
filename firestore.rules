
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function
    function isSignedIn() {
      return request.auth != null;
    }

    // LIFETREES
    match /lifetrees/{treeId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn(); 
    }

    // VISIONS (New)
    match /visions/{visionId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
    }

    // PULSES
    match /pulses/{pulseId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();

      // Subcollection for Loves/Likes
      match /loves/{userId} {
        allow read, write: if isSignedIn();
      }
    }
    
    // MATCHES
    match /matches/{matchId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update: if isSignedIn();
    }
  }
}
