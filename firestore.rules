
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function
    function isSignedIn() {
      return request.auth != null;
    }

    // LIFETREES
    match /lifetrees/{treeId} {
      allow read: if true;
      // Allow general delete for dev cleaning/management, or strictly owned by user
      allow create, update: if isSignedIn(); 
      allow delete: if true; 
    }

    // VISIONS
    match /visions/{visionId} {
      allow read: if true;
      allow create, update: if isSignedIn();
      allow delete: if true;
    }

    // PULSES
    match /pulses/{pulseId} {
      allow read: if true;
      allow create, update: if isSignedIn();
      allow delete: if true;

      // Subcollection for Loves/Likes
      match /loves/{userId} {
        allow read, write: if isSignedIn();
      }
    }
    
    // MATCHES
    match /matches/{matchId} {
        allow read: if true;
        allow create, update: if isSignedIn();
        allow delete: if true;
    }
  }
}